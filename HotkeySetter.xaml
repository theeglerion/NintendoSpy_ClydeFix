<Window x:Class="NintendoSpy.HotkeySetter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NintendoSpy"
        mc:Ignorable="d"
        Title="HotkeySetter" Height="120" Width="260" KeyDown="Window_KeyDown">
    <Grid>
        <Button x:Name="button" Content="Ok!" HorizontalAlignment="Left" Margin="89,49,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label x:Name="label" Content="Reset button:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="hklabel" Content="(none)" HorizontalAlignment="Left" Margin="95,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
